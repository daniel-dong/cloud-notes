<!DOCTYPE html>
<html>
<head>
    <%- include head-begin.ejs %>
</head>

<body>
<%- include body-begin.ejs %>

<div class="text-center page-title"><%= title %></div>
<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12">
            <div class="article-box">
                <h1 class="text-center"><%= art.title %></h1>
                <p class="text-center">
                    <span class="label label-info"><%= art.tag %></span> |
                    <span class="create-time">
                        <span class="text-bold">时间：</span>
                        <%= moment(art.createTime).locale("zh-cn").format("LL HH:mm:ss") %>
                    </span>
                </p>
                <p><%= art.content %></p>
            </div>
        </div>
    </div>
</div>

<%- include body-end.ejs %>
</body>
</html>
